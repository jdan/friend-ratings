<h1><%= @page.name %></h1>

<p><%= @page.description %></p>

<p><i>Created by <%= @page.author %></i></p>

<% @page.ratings.each do |rating| %>
	<%= render :partial => "ratings/show", :locals => { :rating => rating } %>
<% end %>

<%= render :partial => "ratings/form", :locals => { :rating => Rating.new(:page_id => @page.id ) } %>